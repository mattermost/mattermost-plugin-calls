{
    "compilerOptions": {
        "module": "es6",
        "moduleResolution": "node",
        "target": "es6",
        "strict": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "outDir": "./lib",
        "rootDir": "./src",
        "composite": true
    },
    "exclude": ["**/node_modules", "**/*.test.js", "**/*.test.ts"],
}
